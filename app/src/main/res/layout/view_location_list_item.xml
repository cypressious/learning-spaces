<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/spacing">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Fachbibliothek Mathematik"
        android:fontFamily="sans-serif-condensed"
        tools:textAppearance="?android:attr/textAppearanceLarge" />

    <!--<de.maxvogler.learningspaces.views.PercentageView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginBottom="@dimen/spacing_half"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seats_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="17 frei"
            android:drawableLeft="@drawable/circle_good"
            android:drawablePadding="@dimen/spacing_half"
            android:layout_marginRight="@dimen/spacing"
            tools:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/seats_occupied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/circle_bad"
            android:drawablePadding="@dimen/spacing_half"
            tools:text="218 besetzt"
            android:layout_marginRight="@dimen/spacing"
            tools:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_access_time_grey600_18dp"
            android:drawablePadding="@dimen/spacing_half"
            tools:text="9:00 - 19:00"
            tools:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
</LinearLayout>